@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/registro_tipo.css">

<br />
<div class="container">
    <div class="row">
        <div class="col-12 titulo"><h1>Registros Tipo Vehiculo</h1></div>
        <div class="row-cols-4">
            <br />
            <br />
            <div class="col-12">
                <a asp-controller="TiposVehiculos" asp-action="CreateTipoVehiculo" class="col-4 btn-success btn-registro"><i class="fas fa-plus" style="margin-top: 5px;"></i>Crear Tipo Vehiculo</a>
                <a asp-controller="Vehiculos" asp-action="Index" class="col-4 btn-warning btn-registro"><i class="fa fa-arrow-left" style="margin-top: 5px;"></i>Atrás</a>
            </div>
        </div>

    </div>




    <br />
    <br />
    <table id="tblTipoVehiculo" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th></th>
            </tr>
        </thead>


    </table>
</div>
@section Scripts{
    <script src="~/js/tipoVehiculo.js"></script>
}




