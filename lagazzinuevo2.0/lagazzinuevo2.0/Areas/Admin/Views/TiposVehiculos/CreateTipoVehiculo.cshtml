@model Lagazzi.Models.TipoVehiculo
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/registro_tipo.css">
<div>
    <div class="container">
        <div class="row">
            <div class="col-12 titulo"><h1>Registros Tipo Vehículo</h1></div>
            <div class="col-10"></div>
            <form method="post" asp-action="CreateTipoVehiculo" class="col-12 form-register">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Nombre"></label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col">
                        <button type="submit" class="btn btn-success form-control">Registrar</button>
                        &nbsp;
                    </div>
                    <div class="col">
                        <a asp-action="Index" class="btn btn-warning form-control">Volver a Lista</a>
                    </div>
                    </div>
            </form>
        </div>
    </div>
</div>
