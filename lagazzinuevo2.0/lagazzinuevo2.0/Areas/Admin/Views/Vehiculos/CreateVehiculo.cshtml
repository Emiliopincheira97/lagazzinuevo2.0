@model Lagazzi.Models.ViewModels.VehiculoVM
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />

<h3 class="text-center"> Registrar nuevo Vehículo</h3>
<form method="post" asp-action="CreateTipoVehiculo">
    <div class="row px-2 mx-2 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-10 offset-1 mt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Vehiculo.Marca"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Vehiculo.Marca" class="form-control" />
                    <span asp-validation-for="Vehiculo.Marca" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Vehiculo.Modelo"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Vehiculo.Modelo" class="form-control" />
                    <span asp-validation-for="Vehiculo.Modelo" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Vehiculo.Patente"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Vehiculo.Patente" class="form-control" />
                    <span asp-validation-for="Vehiculo.Patente" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Vehiculo.Anio"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Vehiculo.Anio" class="form-control" />
                    <span asp-validation-for="Vehiculo.Anio" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Vehiculo.TipoVehiculoId"></label>
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(m => m.Vehiculo.TipoVehiculoId, Model.ListaTipoVehiculo,
                   "-Seleccione tipo de vehículo-", new {@class ="form-control"})
                </div>
            </div>


            <div class="form-group row">
                <div class="col-8 offset-4">
                    <partial name="_VistaCrearVolver" />
                </div>
            </div>
        </div>
    </div>
</form>
